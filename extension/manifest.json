{
  "manifest_version": 3,
  "name": "Sentiment Analyzer",
  "version": "1.0.0",
  "description": "Analyze the sentiment of selected text using an AI backend.",
  "permissions": [
    "contextMenus",
    "activeTab",
    "notifications"
  ],
  "host_permissions": [
    "https://destroyer795-trial.hf.space/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon.jpg",
    "48": "icon.jpg",
    "128": "icon.jpg"
  },
  "action": {
    "default_icon": {
      "16": "icon.jpg",
      "48": "icon.jpg"
    }
  }
}