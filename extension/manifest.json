{
  "manifest_version": 3,
  "name": "Sentiment Analyzer",
  "version": "2.0.0",
  "description": "Instantly analyze the emotional tone of any text with AI-powered sentiment detection.",
  "permissions": [
    "contextMenus",
    "storage"
  ],
  "host_permissions": [
    "https://destroyer795-sentiment-analyzer-extension.hf.space/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Sentiment Pro",
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "icon.jpg"
  }
}
